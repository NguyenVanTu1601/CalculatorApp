<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_calculator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:textColor="@color/mine_shaft"
        android:textSize="@dimen/sp_40"
        android:text="@string/text_result_default"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:maxLength="20"
        />
    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/mine_shaft_2"
        app:layout_constraintTop_toBottomOf="@id/tv_calculator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintTop_toBottomOf="@id/v_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/mine_shaft"
        android:textSize="@dimen/sp_40"
        android:text="@string/text_result_default"
        android:gravity="end"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:maxLength="20" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_seven"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:background="@drawable/border_button"
            android:text="@string/text_number_seven"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_eight"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_number_eight"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_number_nine"
            app:layout_constraintStart_toEndOf="@id/btn_number_seven"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_nine"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_number_nine"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_number_eight"
            app:layout_constraintEnd_toStartOf="@id/btn_operator_plus"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_operator_plus"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_operator_plus"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_four"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_number_four"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_five"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_number_five"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_number_six"
            app:layout_constraintStart_toEndOf="@id/btn_number_four"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_six"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_number_six"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_number_five"
            app:layout_constraintEnd_toStartOf="@id/btn_operator_minus"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_operator_minus"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_operator_minus"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_one"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_number_one"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_two"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_number_two"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_number_three"
            app:layout_constraintStart_toEndOf="@id/btn_number_one"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_three"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_number_three"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_number_two"
            app:layout_constraintEnd_toStartOf="@id/btn_operator_mul"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_operator_mul"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_operator_mul"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/line_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_zero"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:background="@drawable/border_button"
            android:text="@string/text_number_zero"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dot"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:background="@drawable/border_button"
            android:text="@string/text_dot"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_operator_div"
            app:layout_constraintStart_toEndOf="@id/btn_number_zero"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_operator_div"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:background="@drawable/border_button"
            android:text="@string/text_operator_div"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_dot"
            app:layout_constraintEnd_toStartOf="@id/btn_result"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_result"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:text="@string/text_result"
            android:textSize="@dimen/sp_40"
            android:gravity="center"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
